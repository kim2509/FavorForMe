<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">
    
    <com.tessoft.common.CustomImageView
        android:id="@+id/imgProfile" 
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:text="message"
        android:singleLine="false" />
 
    <TextView android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtMessage"
        android:layout_below="@+id/txtMessage"
        android:layout_marginTop="3dp"
        android:text="name"
        android:textColor="#3B5D98"
        />
    
    <TextView android:id="@+id/txtCreatedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtUserName"
        android:layout_alignBaseline="@+id/txtUserName"
        android:layout_marginLeft="10dp"
        android:text="time" 
        android:textSize="11sp"/>
    
    <TextView android:id="@+id/txtDeleteReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtCreatedDate"
        android:layout_alignBaseline="@+id/txtCreatedDate"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:text="삭제"
        android:textStyle="bold" 
        android:textColor="#3B5D98"/>
    
    <TextView
        android:id="@+id/txtDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:text="10m"
        android:textColor="@android:color/black" />
    
</RelativeLayout>