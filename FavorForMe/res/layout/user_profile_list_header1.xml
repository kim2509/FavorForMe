<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <com.tessoft.common.CustomImageView
        android:id="@+id/imgProfile"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <ImageView
        android:id="@+id/imgSex"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/imgProfile" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgSex"
        android:layout_toRightOf="@+id/imgSex"
        android:text="..."
        android:layout_marginLeft="10dp"
        android:textColor="#3B5D98"
        android:textSize="18sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/txtCreditGuide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgSex"
        android:layout_below="@+id/imgSex"
        android:layout_marginTop="10dp"
        android:text="프로필 완성도" />

    <TextView
        android:id="@+id/txtCreditValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtCreditGuide1"
        android:layout_toRightOf="@+id/txtCreditGuide1"
        android:layout_marginLeft="20dp"
        android:text=""
        android:textColor="#dd0000" />
    
    <Button android:id="@+id/btnChangeProfileImage"
        android:layout_width="wrap_content"
        android:text="이미지 변경"
        android:layout_toRightOf="@+id/imgProfile"
        android:layout_marginLeft="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        style="@style/btn_style"
        android:layout_alignBottom="@+id/imgProfile"/>

    <LinearLayout
        android:id="@+id/layoutProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgProfile"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:text="생년월일" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="30" >

                <TextView
                    android:id="@+id/txtBirthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="left"
                    android:layout_centerVertical="true"
                    android:text="미입력" />

                <Button
                    android:id="@+id/txtChangeBirthday"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="변경하기"
                    style="@style/btn_style"/>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" >

            <DatePicker
                android:id="@+id/datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:calendarViewShown="false"
                android:spinnersShown="true" />

            <Button
                android:id="@+id/txtSetDatePicker"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="업데이트"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                style="@style/btn_style" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:gravity="left"
                android:text="성별" />

            <TextView
                android:id="@+id/txtSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="미입력" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:text="집 위치" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="30" >

                <TextView
                    android:id="@+id/txtHomeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="미입력" />

                <Button
                    android:id="@+id/txtPickHomeLocation"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="설정"
                    style="@style/btn_style" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:text="직장위치" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="30"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtOfficeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="미입력" />

                <Button
                    android:id="@+id/txtPickOfficeLocation"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="설정"
                    style="@style/btn_style"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="70"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:text="직업" />

            <RelativeLayout
                android:id="@+id/layoutUpdateJobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edtJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/btnJobTitle"
                    android:gravity="left"
                    android:layout_centerVertical="true"
                    android:hint="입력" />

                <Button
                    android:id="@+id/txtUpdateJobTitle"
                    android:layout_width="wrap_content"
                    android:layout_alignBaseline="@+id/edtJobTitle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="업데이트"
                    style="@style/btn_style" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="본인의 프로필을 완성할수록 다른 회원들이 믿고 합승할 수 있습니다. 프로필을 완성해서 다른 회원들에게 믿음을 주세요." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="내 합승내역"
                android:textColor="#3B5D98" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>